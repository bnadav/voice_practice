<div dir=rtl>

<h1>עדכון פרק קיים</h1>

<%= form_tag(chapter_url , :method=> "put" ) do -%>
 
  <% if @chapter.errors.any? %>
  <ul>
    <% @chapter.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<table dir=rtl border=1%>
<tr><th>מספר פרק</th><th>שם פרק</th><th>שפת פרק</th><th>להציג נוסחאות</th> </tr> 

<tr>
  <td><%= text_field(:chapter,:number,:size=>10) %></td>
  <td><%= text_field(:chapter,:name) %></td>
  <td><%= select("chapter", "lang", Chapter.find(:all).collect {|e| [ e.lang ] }.uniq) %></td>
  <td><%= select("chapter", "show_formulas", Chapter.find(:all).collect {|e| [ e.show_formulas ] }.uniq, 
                         { :include_blank => false })
 %></td>
 </tr>

 

</table>
  <p>
      <%= submit_tag 'עדכן'  %>
  </p>
<% end %>


<%= link_to 'Back', list_chapters_path %>
</div>
