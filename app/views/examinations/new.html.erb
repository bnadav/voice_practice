<h1>מבחן חדש</h1>

<%= form_for(@examination) do |f| %>
 
   <% if @examination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@examination.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @examination.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :instruction %><br />
    <%= f.text_field :instruction %>
  </p>
   <p>
    <%= f.label :lang %><br />
    <%= select("examination","lang",[["עברית","hebrew"],["ערבית","arabic"]],{ :include_blank => false} ) %>
  </p>
   <p>
    <%= f.label :exam_type %><br />
    <%= select("examination","exam_type",[["פסיכומטרי","psycho"],["אמיר","amir"],["ידע עברית","yael"],["פרקי אנגלית","engchaps"]],{ :include_blank => true} ) %>
  </p>
  <p>
    <%= f.submit "לשמור" %>
  </p>
<% end %>

<%= link_to 'לרשימת המבחנים', list_examinations_path %>
